<div class="digit">

  <%= image_tag digit.url, size: "84x84", class: "digitImg" %> </br>

  recognize:
  <% if digit.digit_recognize == -1 %>
      Invalid
  <%  else %>
      <%= digit.digit_recognize %>
  <% end %>

  <%= button_to "Delete", digit_delete_path(id: digit.id), :method => :delete,  :confirm => "Are you sure ?"%>

  <%= form_for(digit, url: mark_path, method: "get") do |f| %>
      <%= f.hidden_field(:id) %>

      <%= f.select(:digit_user_marked, [['?', nil], ['Invalid', -1], 0, 1, 3, 4, 5, 6, 7, 8, 9], :selected => digit.digit_user_marked ) %>
      <%= f.submit "Mark", class: "btn btn-large btn-primary" %>
  <% end %>

  <% if digit.correctRecognize? %>
      &#10004;
  <% else %>
      &#10007;
  <% end %>
</div>
